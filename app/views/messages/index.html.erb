    <tbody>
      <%@messages.reverse.each do |message|%>
        <tr>
          <td><%=message.autor%></td>
          <td><%=message.text%></td>
          <td><%=message.tags.count%></td>
          <td>
              <%message.tags.each do |t|%>
              <ul>
                <li><%=t.name%></li>
