<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title">Mensajes con la palabra clave: <%=@word%></h3>
    </div>
      <div class="modal-body">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
        <br>

        <table class="table" id="modal-tabla">

          <% if @mtitle.count > 0%>
            <thead class="titulo">
              <tr >
                <th class="titulo">T√çTULO: <%=@word%> </th>
              </tr>
              <tr>
                <th>Titulo</th>
                <th>Texto</th>
                <th>Autor</th>

                <th>Tags</th>
              </tr>
            </thead>
            <tbody class="titulo">
                  <%@mtitle.each do |me|%>
                      <tr>
                        <td><%=me.title.capitalize%></td>
                        <td><%=me.text.capitalize%></td>
                        <td><%=me.autor.capitalize%></td>

                        <td>
                            <%me.tags.each do |t|%>
                            <ul>
                              <li><%=t.name.capitalize%></li>
                            </ul>
                            <%end%>
                        </td>
                      </tr>


                  <% end %>
          <% end%>


          <% if @mtext.count > 0%>
            <thead class="texto">
              <tr>
                  <th>TEXTO: <%=@word%> </th>
                  <tr>
                    <th>Titulo</th>
                    <th>Texto</th>
                    <th>Autor</th>

                    <th>Tags</th>
                  </tr>
              </tr>
            </thead>
            <tbody class="texto">
                  <%@mtext.each do |me|%>
                      <tr>
                        <td><%=me.title.capitalize%></td>
                        <td><%=me.text.capitalize%></td>
                        <td><%=me.autor.capitalize%></td>

                        <td>
                            <%me.tags.each do |t|%>
                            <ul>
                              <li><%=t.name.capitalize%></li>
                            </ul>
                            <%end%>
                        </td>
                      </tr>


                  <% end %>
          <% end%>



          <% if @mautor.count > 0%>
            <thead class="autor">
              <tr>
                  <th>AUTOR: <%=@word%> </th>
                  <tr>
                    <th>Titulo</th>
                    <th>Texto</th>
                    <th>Autor</th>

                    <th>Tags</th>
                  </tr>
              </tr>
            </thead>
            <tbody class="autor">
                  <%@mautor.each do |me|%>
                      <tr>
                        <td><%=me.title.capitalize%></td>
                        <td><%=me.text.capitalize%></td>
                        <td><%=me.autor.capitalize%></td>

                        <td>
                            <%me.tags.each do |t|%>
                            <ul>
                              <li><%=t.name.capitalize%></li>
                            </ul>
                            <%end%>
                        </td>
                      </tr>


                  <% end %>
          <% end%>



          <% if @tname.count > 0%>
            <thead class="tag">
              <tr>
                  <th>TAG: <%=@word%> </th>
                  <tr>
                    <th>Titulo</th>
                    <th>Texto</th>
                    <th>Autor</th>

                    <th>Tags</th>
                  </tr>
              </tr>
            </thead>
            <tbody class="tag">
                  <%@tname.each do |tn|%>
                      <%tn.messages.each do |m|%>
                      <tr>
                        <td><%=m.title.capitalize%></td>
                        <td><%=m.text.capitalize%></td>
                        <td><%=m.autor.capitalize%></td>
                        <td>
                            <%m.tags.each do |t|%>
                            <ul>
                              <li><%=t.name.capitalize%></li>
                            </ul>
                            <%end%>
                        </td>
                      </tr>
                      <%end%>

                  <% end %>
          <% end%>



            </tbody>
          </table>

      </div>
      <div class="modal-footer">
    </div>
  </div>
</div>
